doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Internal Server Error
    meta(name="viewport", content="width=device-width, initial-scale=1")
    style.
      * {
        padding: 0;
        margin: 0;
        line-height: 1.4;
      }

      html {
        display: table;
        width: 100%;
        height: 100%;
        color: #888;
        font-size: 16px;
        text-align: center;
        font-family: sans-serif;
      }
      body {
        display: table-cell;
        padding: 0.625rem;
        vertical-align: middle;
      }

      h1 {
        color: #555;
        font-weight: 400;
        font-size: 2rem;
        line-height: 1.2;
        margin-bottom: 1rem;
      }
      p {
        margin: 0 auto;
        max-width: 280px;
      }
      pre {
        text-align: left;
        margin-top: 2rem;
      }

      @media only screen and (max-width: 280px) {
        h1 {
          font-size: 1.5rem;
        }
      }

  body
    h1 Internal Server Error
    p Sorry, something went wrong.
    pre= stack
// IE needs 512+ bytes: http://blogs.msdn.com/b/ieinternals/archive/2010/08/19/http-error-pages-in-internet-explorer.aspx
